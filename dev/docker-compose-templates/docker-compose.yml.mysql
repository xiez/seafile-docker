version: '3'
services:
  db:
    image: mysql:5.7
    container_name: seafile-mysql
    volumes:
      - /opt/mysql-data:/var/lib/mysql
    ports:
      - "3306:3306"

  memcached:
    image: memcached:1.5.4-alpine
    container_name: seafile-memcached
    ports:
      - "11211:11211"

  deps:
    image: xiez/seafile-dev-deps
    build: 
      context: .
      dockerfile: seafile-docker/dev/Dockerfile-dev-deps
  dev:
    image: xiez/seafile-dev:6.2
    environment:
      - LOCAL_USER_ID=1000
      - CCNET_CONF_DIR=/code/seafile-server/tests/conf
      - SEAFILE_CONF_DIR=/code/seafile-server/tests/conf/seafile-data
      - PYTHONPATH=/code:/usr/local/lib/python2.7/dist-packages:/code/seahub/thirdpart
    container_name: seafile-dev2
    build: 
      context: .
      dockerfile: seafile-docker/dev/Dockerfile-dev
    volumes:
      - /Users/xiez/dev/seafile-conf:/code/seafile-server/tests/conf
      - /Users/xiez/dev/seahub:/code/seahub
    ports:
     - "8000:8000"
     - "8082:8082"
    depends_on:
      - db
      - memcached
